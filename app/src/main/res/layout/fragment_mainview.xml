<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_sceduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="14dp"
        android:text="My Scedule"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_empManagerNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/txt_empStoreNameTitle" />

    <TextView
        android:id="@+id/txt_empManagerName"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="35dp"
        android:text="Isaac"
        app:layout_constraintBottom_toTopOf="@+id/txt_sceduleTitle"
        app:layout_constraintStart_toStartOf="@+id/txt_sceduleTitle"
        app:layout_constraintTop_toTopOf="@+id/txt_empStoreNameTitle" />

    <TextView
        android:id="@+id/txt_empManagerNameTitle"
        android:layout_width="84dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="35dp"
        android:text="Manager :"
        app:layout_constraintBottom_toTopOf="@+id/txt_sceduleTitle"
        app:layout_constraintStart_toStartOf="@+id/txt_empNameTitle"
        app:layout_constraintTop_toTopOf="@+id/txt_empStoreNameTitle" />

    <TextView
        android:id="@+id/txt_empStoreName"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="9dp"
        android:text="OroGold Cosmetics"
        app:layout_constraintBottom_toTopOf="@+id/txt_empManagerName"
        app:layout_constraintEnd_toEndOf="@+id/txt_empManagerName"
        app:layout_constraintStart_toStartOf="@+id/txt_empname"
        app:layout_constraintTop_toBottomOf="@+id/txt_empname" />

    <TextView
        android:id="@+id/txt_empname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Firstname Lastname"
        app:layout_constraintEnd_toEndOf="@+id/txt_empManagerName"
        app:layout_constraintStart_toStartOf="@+id/txt_empManagerName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_empNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="30dp"
        android:text="Employee : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_empStoreNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Store  : "
        app:layout_constraintEnd_toEndOf="@+id/txt_empNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/txt_empNameTitle" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="254dp"
        android:layout_marginTop="488dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_findTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="Find Location"
        app:layout_constraintBottom_toTopOf="@+id/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_findTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_sceduleTitle" />
</android.support.constraint.ConstraintLayout>