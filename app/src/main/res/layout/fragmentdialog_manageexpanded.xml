<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/manageexpandedlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#232323"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:background="@drawable/ic_account_circle_white_24dp"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/fragmentdialog_manage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Name Here"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragmentdialog_manage_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="416-123-4567"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/fragmentdialog_manage_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="name@reroyaltrading.ca"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/idbtlocationemployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:background="@color/White"
            android:drawableLeft="@drawable/ic_navigation_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Last Known Location"
            android:textAlignment="textStart"

            />
        <Button
            android:id="@+id/idbtscheduleemployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:drawableLeft="@drawable/ic_schedule_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Check Schedule"
            android:textAlignment="textStart"
            />

        <Button
            android:id="@+id/idbteditemployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Edit"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/idbtremoveemployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:drawableLeft="@drawable/ic_remove_red_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Remove"
            android:textAlignment="textStart" />

    </LinearLayout>
</RelativeLayout>