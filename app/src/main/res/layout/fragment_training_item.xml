<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    tools:context=".FragmentInformationItem">

    <VideoView
        android:id="@+id/image_informationFragmentImage"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_informationFragmentTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/textview_informationFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="102dp"
        android:gravity="center_horizontal"
        android:text="Title"
        android:textColor="@color/Black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_informationFragmentDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_informationFragmentImage" />

    <TextView
        android:id="@+id/textview_informationFragmentDescription"
        android:layout_width="281dp"
        android:layout_height="193dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:gravity="center_horizontal"
        android:scrollbars="vertical"
        android:text="allcollection Description"
        android:textColor="@color/oroBlack"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/button_informationFragmentBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_informationFragmentTitle" />


    <Button
        android:id="@+id/button_informationFragmentWatch"
        android:layout_width="185dp"
        android:layout_height="41dp"
        android:text="Watch Video"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="397dp"
        tools:layout_editor_absoluteY="812dp" />

    <Button
        android:id="@+id/button_informationFragmentBack"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:background="@color/Black"
        android:text="Back"
        android:textColor="@color/White"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/textview_informationFragmentDescription" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/icons_arrow_thick"
        android:scaleX="-1"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_informationFragmentBack"
        app:layout_constraintEnd_toStartOf="@+id/button_informationFragmentBack"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="71dp"
        android:background="@drawable/icons_arrow_thick"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_informationFragmentBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_informationFragmentBack"
        app:layout_constraintTop_toBottomOf="@+id/textview_informationFragmentDescription" />


</android.support.constraint.ConstraintLayout>