<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/manageexpandedlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#232323"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:background="@drawable/ic_store_white_24dp"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/fragmentdialog_selectstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select Store"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/idbtselectstore00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:background="@color/White"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="OroGold Barrie"
            android:textAlignment="textStart"

            />

        <Button
            android:id="@+id/idbtselectstore01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="OroGold Scarborough"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/idbtselectstore02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="OroGold Brampton"
            android:textAlignment="textStart" />

    </LinearLayout>
</RelativeLayout>