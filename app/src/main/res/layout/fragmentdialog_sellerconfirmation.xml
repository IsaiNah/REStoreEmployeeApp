<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/sellerconfirmlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#232323"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragmentdialog_manage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Confirm Selection"
            android:textColor="@color/White"
            android:textSize="24sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/idbtSellerConfrimDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:background="@color/White"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Date Of Shift :"
            android:textAlignment="textStart"
            />

        <TextView
            android:id="@+id/idbtSellerConfirmStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Store Name : "
            android:textAlignment="textStart"
            />
        <TextView
            android:id="@+id/idbtSellerConfirmStoreAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Address : "
            android:textAlignment="textStart"
            />
        <TextView
            android:id="@+id/idbtidbtSellerConfirmPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/White"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="People :"
            android:textAlignment="textStart"
            />

        <Button
            android:id="@+id/idbtSellerConfirmYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/Goldenrod"
            android:alpha=".9"
            android:drawableLeft="@drawable/ic_check_green_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Yes"
            android:textAlignment="textStart"

            />
            <Button
                android:id="@+id/idbtSellerConfirmNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/Goldenrod"
                android:alpha=".9"
                android:drawableLeft="@drawable/ic_close_red_24dp"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="No"
                android:textAlignment="textStart"

                />

    </LinearLayout>
</RelativeLayout>