<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="169dp"
    android:layout_margin="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="388dp"
        android:layout_height="113dp">

        <TextView
            android:id="@+id/item_subtitle2"
            android:layout_width="41dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="82dp"
            android:layout_toEndOf="@+id/item_image"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:text="Date    :"
            android:textColor="@color/oroBlack"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/item_completedate"
            app:layout_constraintStart_toEndOf="@+id/item_image"
            app:layout_constraintTop_toBottomOf="@+id/item_subtitle" />

        <TextView
            android:id="@+id/item_completedate"
            android:layout_width="68dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="74dp"
            android:layout_toEndOf="@+id/item_image"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:text="01/01/2019"
            android:textColor="@color/oroBlack"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_subtitle2"
            app:layout_constraintTop_toBottomOf="@+id/item_staringredients" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="84dp"
            android:layout_height="150dp"
            android:layout_marginEnd="37dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_subtitle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="229dp"
            android:layout_height="24dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/item_image"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:textColor="@color/Black"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/item_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="230dp"
            android:layout_height="32dp"
            android:layout_gravity="fill"
            android:layout_marginStart="37dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="37dp"
            android:layout_toEndOf="@+id/item_image"
            android:paddingEnd="40dp"
            android:paddingBottom="1dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_image"
            app:layout_constraintTop_toBottomOf="@+id/item_title" />

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="43dp"
            android:layout_height="21dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/item_image"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:text="Status :"
            android:textColor="@color/oroBlack"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/item_subtitle2"
            app:layout_constraintEnd_toStartOf="@+id/item_staringredients"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/item_image"
            app:layout_constraintTop_toBottomOf="@+id/item_detail" />

        <TextView
            android:id="@+id/item_staringredients"
            android:layout_width="102dp"
            android:layout_height="17dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/item_image"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/item_completedate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_subtitle"
            app:layout_constraintTop_toBottomOf="@+id/item_detail" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
